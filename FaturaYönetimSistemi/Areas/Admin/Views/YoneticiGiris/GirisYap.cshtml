
@{
    ViewData["Title"] = "GirisYap";
    Layout = "~/Views/Shared/_FirstPageLayout.cshtml";
}
<!-- Top header -->
<header class="navbar-toggler p-4">
    <p class="w3-left text-dark font-weight-bolder" style="font-size:20px"><a href="/Home/Index"><i class="icon-arrow-left mr-3"></i></a>Yönetici Giriş Sayfası</p>
</header>
<hr />

<main class="login-form">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">Giriş Yap</div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail</label>
                                <div class="col-md-6">
                                    <input type="text" id="email_address" name="YoneticiEmail" class="form-control" placeholder="emailadresiniz@mail.com" autofocus>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Şifre</label>
                                <div class="col-md-6">
                                    <input type="password" id="password" class="form-control" name="YoneticiSifre" placeholder="Şifreniz" required>
                                    <hr />
                                    @if (ViewBag.Message != null)
                                    {
                                        <p class="text-danger mt-2"><i class="icon-warning mr-2"></i>@ViewBag.Message</p>
                                    }
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-6 offset-md-4">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="remember"> Beni Hatırla
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 offset-md-4">
                                <button type="submit" class="btn btn-outline-primary">
                                    Giriş Yap<i class="icon-sign-in ml-2"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

