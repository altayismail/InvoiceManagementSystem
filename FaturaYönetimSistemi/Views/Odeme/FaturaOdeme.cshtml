@using OdemeSistemi.Entities
@model Odeme

@{
    ViewData["Title"] = "FaturaOdeme";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!-- Top header -->
<header class="navbar-toggler p-4">
    <p class="w3-left text-dark font-weight-bolder" style="font-size:20px">Fatura Ödeme Sayfası</p>
    <p class="w3-right text-dark font-weight-normal" style="font-size:20px">
        <i class="icon-calendar mr-2"></i>@DateTime.Now.ToLongDateString()
    </p>
</header>
<hr />

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm("FaturaOdeme", "Odeme", FormMethod.Post))
{
    <div class="d-flex flex-row col-md-12">
        <div class="col-md-6">
            @Html.Label("Ödenecek Fatura No")
            <input type="text" class="form-control" placeholder=@TempData["FaturaId"] readonly>
        </div>
        <div class="col-md-6">
            @Html.Label("Net Ödeme Ücreti")
            <input class="form-control" placeholder="@TempData["FaturaUcreti"] TL" readonly>
        </div>
    </div>
    <br />
    <div class="d-flex flex-row col-md-12">
        <div class="col-md-12">
            @Html.Label("Ödenecek Fatura Tipi")
            <input type="text" class="form-control" placeholder=@TempData["FaturaTipi"] readonly>
        </div>
    </div>
    <br />
    <div class="d-flex flex-row col-md-12">
        <div class="col-md-6">
            @Html.LabelFor(model => model.OdemeKartNumarası, "Kart Numarası")
            @Html.TextBoxFor(model => model.OdemeKartNumarası, new { @class = "form-control", @placeholder = "Örnek: 12341234123412341234123412 - 26 Haneli Kart Numaranız" })
            @Html.ValidationMessageFor(model => model.OdemeKartNumarası, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.OdemeKrediKartıUzerindekiIsim, "Kart Üzerindeki İsim")
            @Html.TextBoxFor(model => model.OdemeKrediKartıUzerindekiIsim, new { @class = "form-control", @placeholder = "Örnek: İsmail Altay" })
            @Html.ValidationMessageFor(model => model.OdemeKrediKartıUzerindekiIsim, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="d-flex flex-row col-md-12">
        <div class="col-md-6">
            @Html.LabelFor(model => model.OdemeKartNumarasıSonKullanımAy, "Kart Son Kullanım Tarihi - Ay")
            @Html.TextBoxFor(model => model.OdemeKartNumarasıSonKullanımAy, new { @class = "form-control", @placeholder = "Örnek: 05" })
            @Html.ValidationMessageFor(model => model.OdemeKartNumarasıSonKullanımAy, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.OdemeKartNumarasıSonKullanımYıl, "Kart Son Kullanım Tarihi- Yıl")
            @Html.TextBoxFor(model => model.OdemeKartNumarasıSonKullanımYıl, new { @class = "form-control", @placeholder = "Örnek: 2029" })
            @Html.ValidationMessageFor(model => model.OdemeKartNumarasıSonKullanımYıl, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="d-flex flex-row col-md-12">
        <div class="col-md-12">
            @Html.LabelFor(model => model.OdemeKrediKartıCVV, "CVV")
            @Html.TextBoxFor(model => model.OdemeKrediKartıCVV, new { @class = "form-control", @placeholder = "Örnek: 095 - Kartınızın arkasındaki 3 haneli numara" })
            @Html.ValidationMessageFor(model => model.OdemeKrediKartıCVV, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="d-flex flex-row col-md-12">
        <div class="col-md-6">
            @Html.LabelFor(model => model.OdemeYapanKullanıcıSehir, "Sehir")
            @Html.TextBoxFor(model => model.OdemeYapanKullanıcıSehir, new { @class = "form-control", @placeholder = "Örnek: İzmir" })
            @Html.ValidationMessageFor(model => model.OdemeYapanKullanıcıSehir, "", new { @class = "text-danger"})
        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.OdemeYapanKullanıcıUlke, "Ülke")
            @Html.TextBoxFor(model => model.OdemeYapanKullanıcıUlke, new { @class = "form-control", @placeholder = "Örnek: Türkiye" })
            @Html.ValidationMessageFor(model => model.OdemeYapanKullanıcıUlke, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <button class="btn btn-outline-primary" style="margin-left:0.75cm" onclick="return confirm('Ödeme gerçekleştiriliyor, onaylıyor musunu?')">
        Ödeme Yap
        <i class="icon-payment ml-2"></i>
    </button>
}

