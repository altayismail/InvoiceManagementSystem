@using EntityLayer.Concrete
@model List<Yonetici>
@{
    ViewData["Title"] = "GetYoneticiList";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<!-- Top header -->
<header class="navbar-toggler p-4">
    <p class="w3-left text-dark font-weight-bolder" style="font-size:20px">Yönetici Listesi</p>
    <p class="w3-right text-dark font-weight-normal" style="font-size:20px">
        <i class="icon-calendar mr-2"></i>@DateTime.Now.ToLongDateString()
    </p>
</header>
<hr />

<div class="px-4 d-none d-md-block">
    <div class="d-flex align-items-center">
        <div class="flex-grow-1">
            <input type="text" class="form-control my-3" placeholder="Search...">
        </div>
    </div>
</div>
@foreach (var item in Model)
{
    <hr />
    <a href="/Mesaj/GetMesajDetail/@item.YoneticiId" class="list-group-item list-group-item-action border-0">
        <div class="d-flex align-items-start">
            <p style="font-weight:bold"><i class="icon-user-circle mr-3"></i>@item.YoneticiIsım.Substring(0, 1)@item.YoneticiSoyisim.Substring(0, 1)   |</p>
            <p class="ml-1">@item.YoneticiIsım @item.YoneticiSoyisim  |  (+90) @item.YoneticiTelefonNo</p>
        </div>
    </a>
    <hr />
}

